<h1>Listing Partner Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @partner_companies.each do |partner_company| %>
      <tr>
        <td><%= partner_company.name %></td>
        <td><%= link_to 'Show', partner_company %></td>
        <td><%= link_to 'Edit', edit_partner_company_path(partner_company) %></td>
        <td><%= link_to 'Destroy', partner_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

